<h2>Formular mit Eingabefeldern und Button</h2>

<!-- Eingabefelder -->
<label for="kreditbetrag">Alter:</label>
<input type="number" id="kreditbetrag" name="kreditbetrag" placeholder="Geben Sie Ihr Alter ein">

<br><br>

<label for="age">Alter:</label>
<input type="number" id="age" name="age" placeholder="Geben Sie Ihr Alter ein">

<br><br>

<label for="age">Alter:</label>
<input type="number" id="age" name="age" placeholder="Geben Sie Ihr Alter ein">

<br><br>

<label for="age">Alter:</label>
<input type="number" id="age" name="age" placeholder="Geben Sie Ihr Alter ein">


<!-- Button zum Ausführen -->
<button onclick="processInput()">Absenden</button>

<!-- Ergebnisbereich -->
<p id="result"></p>

<script>
// Funktion zum Verarbeiten der Eingabe
function processInput() {
    // Werte aus den Eingabefeldern abrufen
    const kreditbetrag = document.getElementById("kreditbetrag").value;
    const laufzeit = document.getElementById("laufzeit").value;
    const zinssatz = document.getElementById("zinssatz").value;
    const rate = document.getElementById("rate").value;

 // Überprüfen, ob alle Felder ausgefüllt sind
 if(kreditbetrag && laufzeit && zinssatz && rate) {
    document.getElementById("result").innerText = 
        `Hallo ${kreditbetrag}, du bist ${laufzeit} Jahre alt, deine E-Mail ist ${zinssatz}, und du kommst aus ${rate }.`;
} else {
    document.getElementById("result").innerText = "Bitte füllen Sie alle Felder aus.";
}

}




</script>

